service magic
{
        disable                 = no
        socket_type             = stream
        protocol                = tcp
        wait                    = no
        log_type                = FILE /var/log/xinetd.log
        log_on_success          = HOST PID EXIT DURATION
        log_on_failure          = HOST
        user                    = root

        bind                    = 0.0.0.0
        port                    = 13371

        server                  = /usr/bin/python3
        server_args             = -u /chal.py

        type                    = UNLISTED

        per_source              = 2
        rlimit_cpu              = 900
}
